package Controller;

import java.util.ArrayList;
import java.util.List;
import java.util.Random;

public class Main {

	private static final String DECK[] = {"Ar","At","Ai","Ap",
			"2r","2t","2i","2p",
			"3r","3t","3i","3p",
			"4r","4t","4i","4p",
			"5r","5t","5i","5p",
			"6r","6t","6i","6p",
			"7r","7t","7i","7p",
			"8r","8t","8i","8p",
			"9r","9t","9i","9p",
			"10r","10t","10i","10p",
			"Vr","Vt","Vi","Vp",
			"Dr","Dt","di","Dp",
			"Kr","Kt","Ki","Kp"};
	
	private static List<Integer> cards; 
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		cards= new ArrayList<Integer>();
		Random random = new Random();
		
		while(cards.size()!=6) {
			
			int toAdd = random.nextInt(53);
			if(!cards.contains(toAdd)) {
				cards.add(toAdd);
			}
		}

		arrangeCards();
		
		
		
	}

	
	private static void arrangeCards() {
		
		int culoare[] = {0,0,0,0};
		
		for(int i:cards) {
			if(DECK[i].substring(DECK[i].length()-1).equals("r")) {
				culoare[0]++;
			}
			if(DECK[i].substring(DECK[i].length()-1).equals("t")) {
				culoare[1]++;
			}
			if(DECK[i].substring(DECK[i].length()-1).equals("i")) {
				culoare[2]++;
			}
			if(DECK[i].substring(DECK[i].length()-1).equals("p")) {
				culoare[3]++;
			}
		int poz= -1;
		int max = -1;
		for(int j = 0;j<4;j++) 
			if(max<culoare[j]) {
				max = culoare[j];
				poz = j;
			}
			
		}
		System.out.println(DECK.toString()+"   "+poz);
		
	}
}
